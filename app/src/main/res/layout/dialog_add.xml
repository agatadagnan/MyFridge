<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/productNameD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:hint="Product name*" />

    <EditText
        android:id="@+id/productCategoryD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productNameD"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:hint="Product category*" />

    <EditText
        android:id="@+id/expirationDateD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productCategoryD"
        android:layout_alignParentStart="true"
        android:inputType="date"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/dateOfPurchaseD"
        android:hint="Expiration date" />

    <EditText
        android:id="@+id/dateOfPurchaseD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productCategoryD"
        android:layout_alignParentEnd="true"
        android:inputType="date"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:hint="Date of purchase" />

</RelativeLayout>